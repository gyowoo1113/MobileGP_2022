<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.GameActivity">

    <kr.ac.tukorea.ge.sgp02.a2019182019.minicuphead.framework.game.GameView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSwitchBtn"
        android:text="Attack Switch"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#AA93EAD1"
        tools:ignore="MissingConstraints,OnClick"
        />
    <ImageView
        android:id="@+id/fadeInGameImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fade_game_animation"
        android:scaleType="centerCrop"
        />
</androidx.constraintlayout.widget.ConstraintLayout>