<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/winscreen_bg"
    tools:context=".app.ResultActivity">

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/result_title_animation"
        android:paddingHorizontal="10dp"
        />
    <ImageView
        android:id="@+id/cupheadImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/result_character_animation"
        android:paddingBottom="20dp"
        android:layout_below="@+id/titleImageView"
        />
    <ImageView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleImageView"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cupheadImageView"
        android:paddingBottom="30dp"
        android:src="@mipmap/winscreen_board" />

    <TextView
        android:id="@+id/bossTextView"
        style="@style/boardTextStyle"
        android:layout_below="@+id/titleImageView"
        android:text="BOSS ....................... 1/1"
        android:paddingTop="15sp"
        android:autoSizeTextType="uniform"
        />
    <TextView
        android:id="@+id/monsterTextView"
        android:layout_below="@+id/bossTextView"
        style="@style/boardTextStyle"
        android:text="MONSTER ............... 1/1"
        android:paddingTop="1sp"
        android:autoSizeTextType="uniform"
        />
    <TextView
        android:id="@+id/eventTextView"
        android:layout_below="@+id/monsterTextView"
        style="@style/boardTextStyle"
        android:text="EVENT MONSTER ... 1/1"
        android:paddingTop="1sp"
        android:autoSizeTextType="uniform"
        />
    <TextView
        android:id="@+id/hpTextView"
        android:layout_below="@+id/eventTextView"
        style="@style/boardTextStyle"
        android:text="LIFE ......................... 1/1"
        android:paddingTop="1sp"
        android:autoSizeTextType="uniform"
        />

    <ImageView
        android:id="@+id/LineImageView"
        style="@style/boardTextStyle"
        android:layout_below="@+id/hpTextView"
        android:paddingTop="10dp"
        android:src="@mipmap/winscreen_line" />

    <TextView
        android:id="@+id/ScoreTextView"
        android:layout_below="@+id/LineImageView"
        style="@style/boardTextStyle"
        android:text="A"
        android:paddingTop="3sp"
        android:textSize="30sp"
        android:textColor="#DCA502"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        />
    <TextView
        android:layout_below="@+id/ScoreTextView"
        android:layout_toRightOf="@+id/cupheadImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/fadeImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fade_animation"
        android:scaleType="centerCrop"/>
  </RelativeLayout>

